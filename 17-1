#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
#include <math.h>

void MaxAndMin(int *arr, int size, int ** mxPtr, int ** mnPtr)
{
	int *max, *min;
	int i;

	max = min = &arr[0];

	for (i = 0; i < size; i++)
	{
		if (*max < arr[i])
			max = &arr[i];
		if (*min > arr[i])
			min = &arr[i];
	}

	*mxPtr = max;
	*mnPtr = min;
}

int main(void)
{
	int * maxPtr;
	int * minPtr;
	int arr[5];
	int i;

	for (i = 0; i < 5; i++)
	{
		printf("Enter Integer : ");
		scanf("%d", &arr[i]);
	}

	MaxAndMin(arr, sizeof(arr) / sizeof(int), &maxPtr, &minPtr);
	printf("최대 : %d, 최소 : %d \n", *maxPtr, *minPtr);

	return 0;
}
